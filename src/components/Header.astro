---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav class="hidden md:inline">
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/blog">Blog</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <nav class="md:hidden">
    <button id="mobile-menu-open">
      <i class="fa-solid fa-bars" aria-hidden="true" title="Open mobile menu"
      ></i>
      <span class="fa-sr-only">Open mobile menu</span>
    </button>
    <section
      id="mobile-menu"
      class="hide-menu fixed top-0 left-0 z-10 w-full h-full transition-transform bg-black/75 border-primary-main"
    >
      <div class="bg-bg-body w-[75%] h-full drop-shadow-2xl">
        <button id="mobile-menu-close" class="px-6 h-[5rem] text-lg xml-[1px]">
          <i
            class="fa-solid fa-xmark"
            aria-hidden="true"
            title="Close mobile menu"></i>
          <span class="fa-sr-only">Close mobile menu</span>
        </button>
        <ul class="unset flex flex-col text-text-bold gap-4 [&>li]:p-0 px-6">
          <li><HeaderLink href="/">Home</HeaderLink></li>
          <li><HeaderLink href="/blog">Blog</HeaderLink></li>
        </ul>
      </div>
    </section>
  </nav>
  <div
    class="max-[350px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <a
      class="unset text-xl ml-4 rounded-sm hover:text-text-link"
      target="_blank"
      rel="noopener noreferrer"
      href="https://www.linkedin.com/in/marco-garujo-16a50a14a/"
    >
    <i class="fa-brands fa-linkedin-in" title="My Linkedin Link"></i>
    <span class="fa-sr-only">My LinkedIn</span>
    </a>

    <a
      class="unset text-xl ml-4 hover:text-text-link"
      target="_blank"
      rel="noopener noreferrer"
      href="https://github.com/MarcoCangela"
    >
      <i class="fa-brands fa-github" aria-hidden="true" title="My GitHub"></i>
      <span class="fa-sr-only">My GitHub</span>
    </a>
  </div>

  <DarkModeToggle />
</header>

<script>
  // @ts-nocheck
  document.querySelector("#mobile-menu-open").addEventListener("click", () => {
    const menuElem = document.querySelector("#mobile-menu");
    menuElem.classList.remove("hide-menu");
    menuElem.classList.add("show-menu");
    document.body.style.overflow = "hidden";
  });
  document.querySelector("#mobile-menu-close").addEventListener("click", () => {
    const menuElem = document.querySelector("#mobile-menu");
    menuElem.classList.remove("show-menu");
    menuElem.classList.add("hide-menu");
    document.body.style.overflow = "auto";
  });
</script>

<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
  .hide-menu {
    transform: translateX(-100%);
  }
  .show-menu {
    transform: translateX(0%);
  }
</style>
